<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.jyu.oa.domain">

	<class name="Privilege" table="jyu_privilege">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="url" column="url"></property>
		<property name="name" column="name"></property>


		<!-- roles属性，表达了我与Role的多对多关系 -->
		<set name="roles" table="jyu_role_privilege">
			<key column="privilegeId"></key>
			<many-to-many class="Role" column="roleId"></many-to-many>
		</set>


		<!-- parent属性，表达了我与Privilege（上级）的多对一关系 -->
		<many-to-one name="parent" class="Privilege" column="parentId"></many-to-one>


		<!-- children属性，表达了我与Privilege（下级）的一对多关系 -->
		<set name="children" order-by="id ASC" lazy="false">
			<key column="parentId"></key>
			<one-to-many class="Privilege" />
		</set>


	</class>

</hibernate-mapping>
